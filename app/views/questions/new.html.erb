<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h2>新しい質問を投稿</h2>
    </div>
    <div class="card-body">
      <%= form_with(model: @question, local: true) do |f| %>
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <%= f.label :choice_one, "選択肢1", class: "form-label" %>
              <%= f.text_field :choice_one, class: "form-control" %>
              <%= f.file_field :choice_one_image, class: "form-control mt-2" %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <%= f.label :choice_two, "選択肢2", class: "form-label" %>
              <%= f.text_field :choice_two, class: "form-control" %>
              <%= f.file_field :choice_two_image, class: "form-control mt-2" %>
            </div>
          </div>
        </div>
        <div class="text-center">
          <%= f.submit "投稿する", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>