<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h2>究極の質問</h2>
    </div>
    <div class="card-body">
      <%= form_with(model: @question, local: true) do |f| %>
        <div class="mb-3">
          <%= f.label :title, "タイトル", class: "form-label" %>
          <div class="input-group">
            <%= f.text_field :title, class: "form-control", placeholder: "例：かわいい" %>
            <span class="input-group-text">のはどっち？</span>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <%= f.label :choice_one, "選択肢1", class: "form-label" %>
              <%= f.text_field :choice_one, class: "form-control", placeholder: "例：犬" %>
              <%= f.file_field :choice_one_image, class: "form-control mt-2" %>
          </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <%= f.label :choice_two, "選択肢2", class: "form-label" %>
              <%= f.text_field :choice_two, class: "form-control", placeholder: "例：猫" %>
              <%= f.file_field :choice_two_image, class: "form-control mt-2" %>
            </div>
          </div>
        </div>
        <div class="text-center">
          <%= f.submit "投稿する", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


